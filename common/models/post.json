{
  "name": "Post",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "summary": {
      "type": "string"
    },
    "content": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "geopoint"
    },
    "likeCount": {
      "type": "number",
      "default": 0
    },
    "repostCount": {
      "type": "number",
      "default": 0
    },
    "nativeFormat": {
      "type": "string",
      "required": true,
      "default": "native"
    },
    "privacy": {
      "type": "string",
      "required": true,
      "default": "public"
    },
    "lang": {
      "type": "string"
    },
    "hash": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "files": {
      "type": "hasMany",
      "model": "File",
      "foreignKey": ""
    },
    "actor": {
      "type": "belongsTo",
      "model": "Actor",
      "foreignKey": ""
    }
  },
  "acls": [],
  "methods": {}
}
